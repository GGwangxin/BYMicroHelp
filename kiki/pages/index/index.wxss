/**index.wxss**/

/**/

page {
  background: #f6f6f6;
}

.mod-home {
  width: 100%;
  height: 100%;
  overflow-x: hidden;
}

.mod-home .scroll-view .slider .slider-image {
  width: 100%;
  height: 100%;
}

.slider-image {
  width: 100%;
  height: 100%;
}

.m-list {
  padding: 0 10px;
  background: #fff;
  list-style: none;
}

.mgui-title {
  padding: 5px 10px;
  height: 20px;
  line-height: 15px;
  font-size: 14px;
  color: #333;
  background: #fff;
  margin-top: 5px;
}

.userh {
  float: right;
  font-size: 12px;
  height: 12px;
  color: #f06000;
}

.userq {
  border-radius: 5px;
  margin-left: -5px;
  margin-right: 5px;
  font-size: 12px;
  height: 12px;
  width: 10px;
  color: #f06000;
  background: #f06000;
}

.userju {
  width: 100%;
  flex-wrap: nowrap;
  display: block;
}

/*images*/

.recommond_nav {
  margin-top: 5px;
  background: white;
  padding: 10px;
  font-size: 15px;
}

.recommond_cont {
  background: white;
}

.recommond_flex {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  flex-wrap: wrap;
}

.recommond_for {
  width: 48%;
  height: 120px;
}
.recommond_for:nth-child(3) {
  padding-top: 30px;
  padding-bottom: 30px;
}

.recommond_for:nth-child(4) {
  padding-top: 30px;
  padding-bottom: 30px;
}

.recommond_for>image {
  width: 100%;
  height: 100%;
}


.recommond_icon {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
}

.recommond_text1 {
  width: 100%;
  height: 40rpx;
  position: absolute;
  font-size: 12px;
  color: #bbb;
  margin-left: 30rpx;
}

.recommond_right {
  width: 80rpx;
  height: 23rpx;
}

.recommond_right image {
  width: 100%;
  height: 100%;
}

.recommond_left {
  color: #000;
  font-size: 13px;
  margin-bottom: 2px;
}

/*人物*/

.title-pro {
  width: 100%;
  height: 40px;
  position: relative;
  font-size: 13px;
  padding: 10px 10px;
  color: #333;
  background: #fff;
}

.title-pro .pic {
  width: 40px;
  height: 40px;
  float: left;
  margin-right: 8px;
  border-radius: 50%;
}

.title-pro .title {
  margin-top: 2px;
  font-size: 12px;
}

/**/

.content {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row; /*默认的方向*/
  flex-wrap: wrap; /*自动换行*/
  justify-content: center; /*水平方向居中对齐*/
  background: #fff;
}

.content_item {
  height: 200rpx;
  width: 48%;
  margin: 1%;
  position: relative; /*相对定位 ——相对或者绝对都是定位，这里为了子视图方便定位*/
}

.content_item image {
  width: 100%;
  height: 100%;
}

.content_item_text {
  width: 97%;
  height: 20px;
  color: white;
  position: absolute; /*绝对布局 相对于最近已经定位的父视图定位*/
  bottom: 0px;
  font-size: 15px;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  padding-left: 5px;
}
