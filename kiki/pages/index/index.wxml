<!--index.wxml-->

<view class='mod-home' scroll-x="false">
  <loading hidden="{{hidden}}">拼命加载中...</loading>

  <scroll-view scroll-y="true" bindscroll="scrollChangeBgColor" class="scroll-view" bindscrolltolower="scrollBottom">
    <!--滚动banner-->
    <view class="slider">
      <!--滑块视图-->
      <swiper indicator-dots="true" autoplay="true" interval="3000">
        <block wx:for="{{banners}}">
          <swiper-item>
            <image src="{{item.linkUrl}}" class="slider-image" mode="scaleToFill" />
          </swiper-item>
        </block>
      </swiper>
    </view>
  </scroll-view>

  <view style='border-bottom: 5px solid #f5f5f5;'></view>


  <view class="mgui-title">
    <text class='userq'>1</text>
    <text>热门</text>
    <text class='userh'>更多</text>
  </view>

  <view class="recommond_cont">
    <view class="recommond_flex">
      <view class="recommond_for" wx:for-items="{{goods}}" bindtap="toDetailsTap" data-id="{{item.id}}">
        <image style='border-radius: 3px;' src="{{item.keywords}}"></image>
        <view class="recommond_name">
          <view class="recommond_left">
            <text>{{item.title}}</text>
          </view>
        </view>
      </view>
    </view>
  </view>


  <view class="mgui-title">
    <text class='userq'>1</text>
    <text>推荐</text>
    <text class='userh'>更多</text>
  </view>

  <view class="recommond_cont">
    <view class="recommond_flex">
      <view class="recommond_for" wx:for-items="{{wudao}}" bindtap="toDetailsTap" data-id="{{item.id}}">
        <image style='border-radius: 3px;' src="{{item.keywords}}"></image>
        <view class="recommond_name">
          <view class="recommond_left">
            <text>{{item.title}}</text>
          </view>
        </view>
      </view>
    </view>
  </view>


  <view style='border-bottom: 15px solid #f5f5f5;'></view>
</view>